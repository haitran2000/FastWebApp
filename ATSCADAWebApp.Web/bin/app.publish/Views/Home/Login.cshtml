
@model ATSCADAWebApp.Web.Models.LoginView

@{
    Layout = null;
}

<!DOCTYPE html>
@{ 
    var mode = Model.Info.DarkMode ? "dark-mode" : "";
}
<html lang="en" class=@mode}>
<head>
    <meta charset="utf-8" />
    <title>@Model.Info.Title</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="@Model.Info.Description" name="description" />
    <meta content="@Model.Info.Author" name="author" />
    <link rel="shortcut icon" href="~/favicon.ico">

    <link href="~/AppTemplate/css/vendor.min.css" rel="stylesheet" />
    <link href="~/AppTemplate/css/material/app.min.css" rel="stylesheet" />

</head>
<body class='pace-top'>
    <div id="loader" class="app-loader">
        <div class="material-loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"></circle>
            </svg>
            <div class="message">Loading...</div>
        </div>
    </div>
    <div id="app" class="app">
        <div class="login login-with-news-feed">
            <div class="news-feed">
                <div class="news-image">
                    <a href="http://atscada.com/" target="_blank">
                        <img class="atscada-background" style="height: 100%; width:auto" src="~/Image/background.png" alt="ATSCADA" />
                    </a>                    
                </div>
                <div class="news-caption">
                    <h4 class="caption-title"><b>@Model.Info.Title</b></h4>
                    <p>@Model.Info.Description</p>
                </div>
            </div>
            <div class="login-container">
                <div class="login-header mb-30px">
                    <div class="brand">
                        <div class="d-flex align-items-center">
                            <b>@Model.Info.Brand</b>
                        </div>
                        <small>@Model.Info.Description</small>
                    </div>
                    <div class="icon">
                        <i class="fa fa-sign-in-alt"></i>
                    </div>
                </div>
                <div class="login-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        if (ViewData.ModelState.Values.Where(v => v.Errors.Count > 0).Count() > 0)
                        {
                            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                        }
                        <div class="form-floating mb-15px">
                            @Html.TextBoxFor(m => m.Account.UserName, "", new { @class = "form-control h-45px fs-13px", @placeholder = "UserName", autocomplete = "off" })
                            @Html.LabelFor(m => m.Account.UserName, new { @class = "d-flex align-items-center fs-13px text-gray-600" })
                        </div>
                        <div class="form-floating mb-15px">
                            @Html.TextBoxFor(m => m.Account.Password, "", new { @class = "form-control h-45px fs-13px", @placeholder = "Password", @type = "password", autocomplete = "off" })
                            @Html.LabelFor(m => m.Account.Password, new { @class = "d-flex align-items-center fs-13px text-gray-600" })
                        </div>
                        <div class="mb-15px">
                            <button type="submit" class="btn btn-cyan d-block h-45px w-100 btn-lg fs-14px">Login</button>
                        </div>
                    }
                    <hr class="bg-gray-600 opacity-2" />
                    <div class="text-gray-600 text-center text-gray-500-darker mb-0">
                        Copyright 2022 &copy; <a href="http://atscada.com" target="_blank">ATSCADA</a>
                    </div>
                </div>
            </div>
        </div>

        <a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top" data-toggle="scroll-to-top"><i class="fa fa-angle-up"></i></a>

    </div>

    <script src="~/AppTemplate/js/vendor.min.js"></script>
    <script src="~/AppTemplate/js/app.min.js"></script>
    <script src="~/AppTemplate/js/theme/material.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            if (App) {
                App.init();
                App.restartGlobalFunction();
            }
                
            window.location.hash = '';
        });
    </script>

</body>
</html>



