@model ATSCADAWebApp.Web.Models.ErrorView

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>ATSCADA - Error Page</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">
    <meta content="" name="description">
    <meta content="" name="author">

    <link href="~/AppTemplate/css/material/app.min.css" rel="stylesheet" />

</head>
<body>
    <div>
        <div class="error">
            <div class="error-code">
                @Model.StatusCode
            </div>
            <div class="error-content">
                <div class="error-message">
                    Oops! An unexpected error has occurred.
                </div>
                <div class="error-desc mb-4">
                    @Model.Message
                </div>
                <div>
                    <a href="~/Home/Index" class="btn btn-success px-3">Go Back To Home</a>
                </div>
            </div>
        </div>
        <a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top" data-toggle="scroll-to-top"><i class="fa fa-angle-up"></i></a>
    </div>
</body>
</html>